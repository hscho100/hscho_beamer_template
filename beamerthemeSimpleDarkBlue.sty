% table of contents (overview)
\setbeamertemplate{section in toc}[sections numbered] 
\setbeamertemplate{subsection in toc}[subsections numbered] %default
\makeatletter
\setbeamertemplate{headline}
{
  \leavevmode%
  \ifnum\thesection=0
    \ifnum\insertframenumber=2
    \hbox{%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.75ex,dp=1.5ex,right]{frametitle}% section in head/foot
        \usebeamerfont{section in head/foot}%\thesection.\insertsectionhead\hspace*{2ex}
    \end{beamercolorbox}% 
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.75ex,dp=1.5ex,left]{frametitle}% subsection in head/foot
        \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead
    \end{beamercolorbox}}%  
    \else
    \hbox{%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.75ex,dp=1.5ex,right]{}% section in head/foot
        \usebeamerfont{section in head/foot}%\thesection.\insertsectionhead\hspace*{2ex}
    \end{beamercolorbox}% 
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.75ex,dp=1.5ex,left]{}% subsection in head/foot
        \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead
    \end{beamercolorbox}}%
    \fi 
  \else
    \hbox{%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.65ex,dp=1.5ex,right]{section in head/foot}%
        \usebeamerfont{section in head/foot}\thesection.\insertsectionhead\hspace*{2ex}
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.65ex,dp=1.5ex,left]{subsection in head/foot}%
        \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead
    \end{beamercolorbox}}%   
  \fi
  \vskip0pt%
}
\makeatother



